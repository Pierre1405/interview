<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="1" author="pierre">
        <createTable tableName="vehicle">
            <column name="vehicle_id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="varchar(256)"/>
            <column name="price" type="int"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="pierre">
        <insert tableName="vehicle">
            <column name="name" value="Twingo" />
            <column name="price" value="123" />
        </insert>
        <insert tableName="vehicle">
            <column name="name" value="Clio" />
            <column name="price" value="456" />
        </insert>
        <insert tableName="vehicle">
            <column name="name" value="No option" />
            <column name="price" value="789" />
        </insert>
    </changeSet>
    <changeSet id="3" author="pierre">
        <createTable tableName="option">
            <column name="option_id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="vehicle_id" type="int">
                <constraints foreignKeyName="fk_vehicle_id" nullable="false" references="vehicle(vehicle_id)"/>
            </column>
            <column name="name" type="varchar(256)"/>
            <column name="price" type="int"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="pierre">
        <insert tableName="option">
            <column name="vehicle_id" value="1" />
            <column name="name" value="pink painting" />
            <column name="price" value="34" />
        </insert>
        <insert tableName="option">
            <column name="vehicle_id" value="1" />
            <column name="name" value="cd player" />
            <column name="price" value="12" />
        </insert>
        <insert tableName="option">
            <column name="vehicle_id" value="2" />
            <column name="name" value="pink painting" />
            <column name="price" value="34" />
        </insert>
    </changeSet>
</databaseChangeLog>